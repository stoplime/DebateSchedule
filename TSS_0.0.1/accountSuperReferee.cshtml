@using BussinessObject;
<html>

<head>
    <!-- Load Base -->
    @RenderPage("Base.cshtml")
</head>

<body>
    <!-- Content -->
    <div class="container">
        @{
            Validation.RequireField("user_name", "Please enter a Username");
            Validation.RequireField("password", "Please enter a Password");

            if (IsPost)
            {
                string inputUsername = Request.Form["user_name"];
                string inputPassword = Request.Form["password"];
                if (Validation.IsValid())
                {
                    Login login = new Login(inputUsername, inputPassword);

                    string error;

                    if (login.Validate(out error))
                    {
                        //Successful login code here
                        <p class="red lighten-2">
                            username: @inputUsername <br />
                            encriptPass: @login.EncriptPass <br />
                        </p>
                    }
                    else
                    {
                        <p class="red lighten-2">
                            *Error: Username and/or Password does not match with the system <br />
                            @error
                        </p>
                    }
                }
            }
        }
        <h3>Super Referee Name</h3>
        <div class="row">

            <div class="col s12 blue lighten-5">

                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12 m12 l12">
                            <select>
                                <option value="" disabled selected>Select a Referee</option>
                                <option value="1">Mark Walberg</option>
                                <option value="2">Andrew Jackson</option>
                            </select>
                            <label>Super Referee Invitation</label>
                        </div>
                    </div>
                    <div class="row">
                    <div class="col s12 offset-m7 offset-l8">
                        <div class="col">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Send Invitation</button>
                        </div>
                    </div>

                </div>
                </form>
            </div>

        </div>
        
        <script type="text/javascript">
            $(document).ready(function() {
                $('select').material_select();
            });
        </script>
</body>

</html>