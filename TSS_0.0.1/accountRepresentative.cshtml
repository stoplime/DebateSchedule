@using BussinessObject;
<html>

<head>
    <!-- Load Base -->
    @RenderPage("Base.cshtml")
</head>

<body>
    <!-- Content -->
    <div class="container">
        @{
            Validation.RequireField("user_name", "Please enter a Username");
            Validation.RequireField("password", "Please enter a Password");

            if (IsPost)
            {
                string inputUsername = Request.Form["user_name"];
                string inputPassword = Request.Form["password"];
                if (Validation.IsValid())
                {
                    Login login = new Login(inputUsername, inputPassword);

                    string error;

                    if (login.Validate(out error))
                    {
                        //Successful login code here
                        <p class="red lighten-2">
                            username: @inputUsername <br />
                            encriptPass: @login.EncriptPass <br />
                        </p>
                    }
                    else
                    {
                        <p class="red lighten-2">
                            *Error: Username and/or Password does not match with the system <br />
                            @error
                        </p>
                    }
                }
            }
        }
        <h2>Representative Name</h2>
        <div class="row">

            <div class="col s10 offset-s1 blue lighten-5">
                <table>
                    <tr>
                        <td>
                            <h4>School Name</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>School Address</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col s10 offset-s1 blue lighten-5">
                <table>
                    <tr>
                        <td>
                            <h5>Team 1</h5>
                        </td>
                    </tr>
                    <tr>
                        <td>team member 1</td>
                    </tr>
                    <tr>
                        <td>team member 2</td>
                    </tr>
                    <tr>
                        <td>team member 3</td>
                    </tr>
                </table>
            </div>

        </div>
        <div class="row">
            <div class="col s3 offset-s1">
                <a href="#!" class="btn waves-effect waves-light">Add New Team</a>
            </div>

        </div>
    </div>
</body>

</html>